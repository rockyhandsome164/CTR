<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - CTR_FLS</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <!-- For Telerik reports -->
    <link href="https://kendo.cdn.telerik.com/2019.1.115/styles/kendo.common.min.css" rel="stylesheet" id="common-css" />
    <link href="https://kendo.cdn.telerik.com/2019.1.115/styles/kendo.blueopal.min.css" rel="stylesheet" id="skin-css" />

    <!-- For Telerik reports -->
    <style>
        #reportViewer1 {
            position: relative;
            width: 1100px;
            height: 700px;
            font-family: Verdana, Arial;
            /* position: absolute;
            left: 5px;
            right: 5px;
            top: 160px;
            bottom: 5px;
            overflow: hidden;
            clear: both;*/
        }

        #reportViewer2 {
            position: relative;
            width: 1100px;
            height: 700px;
            font-family: Verdana, Arial;
            /* position: absolute;
            left: 5px;
            right: 5px;
            top: 160px;
            bottom: 5px;
            overflow: hidden;
            clear: both;*/
        }

        .nav-item {
            width: 15%;
            text-align: center;
        }
    </style>

    <!--If Kendo is used it should be added before the report viewer.-->
    <script src="@Url.Content("~/api/reports/resources/js/telerikReportViewer/")"></script>
    @*<script src="~/Scripts/telerikReportViewer-15.1.21.616.min.js"></script>*@

    @*CDN Link for Sweetalert: alerting package*@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js"
            integrity="sha512-AA1Bzp5Q0K1KanKKmvN/4d3IRKVlv9PYgwFPvm32nPO6QS8yH1HO7LbgB1pgiOxPtfeg5zEn2ba64MUcqJx6CA=="
            crossorigin="anonymous" referrerpolicy="no-referrer"></script>


</head>
<body style="background-color:#fcfcfc">
    <nav class="navbar navbar-inverse navbar-fixed-top" style="background-color: #000000 !important; height:61px">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#" style="padding:0px">
                    <img src="~/images/Howmet_Aerospace_horiz_rev.jpg" width="150" height="61" />
                </a>
            </div>
            <div class="navbar-collapse collapse" id="navbarSupportedContent">
                <ul class="nav navbar-nav" style="width:70%; font-size:20px; margin-top:5px">
                    <li class="nav-item" style="width:15%;">
                        @Html.ActionLink("Job Tree", "View", "JobTree", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item" style="width:15%;">
                        @Html.ActionLink("OnBase", "View", "Onbase", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="dropdown" style="width:10%;">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">CTR <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Certified Test Report", "CertifiedTestReport", "ReportViews", new { area = "" }, new { @class = "nav-link", @style = "font-size:16px" })</li>
                            <li>@Html.ActionLink("Cert Package", "CertPkg", "OnBase", new { area = "" }, new { @class = "nav-link", @style = "font-size:16px" })</li>
                        </ul>
                    </li>
                    <li class="dropdown" style="width:15%;">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Reports <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Item Specifications", "ItemSpecReport", "ReportViews", new { area = "" }, new { @class = "nav-link", @style = "font-size:16px" })</li>
                            <li>@Html.ActionLink("Authorized Release Cert", "AuthRelCert", "ReportViews", new { area = "" }, new { @class = "nav-link", @style = "font-size:16px" })</li>
                            <li>
                                @Html.ActionLink("Final Inspection Reqmt. Report & Test Forms", "QAJobLogReport", "ReportViews", new { area = "" }, new { @class = "nav-link", @style = "font-size:16px" })
                            </li>
                        </ul>
                    </li>

                    <li class="dropdown" style="width:15%;">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Maintenance <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Master Specifications", "MasterSpec", "Utility", new { area = "" }, new { @class = "nav-link", @style = "font-size:16px" })</li>
                            <li>@Html.ActionLink("Nominal Threads", "NominalThread", "NominalThread", new { area = "" }, new { @class = "nav-link", @style = "font-size:16px" })</li>
                            <li>@Html.ActionLink("Item Specifications", "ItemSpec", "ItemSpec", new { area = "" }, new { @class = "nav-link", @style = "font-size:16px" })</li>
                            <li>@Html.ActionLink("Test Templates", "TestTemplateDetails", "ReportViews", new { area = "" }, new { @class = "nav-link", @style = "font-size:16px" })</li>
                        </ul>
                    </li>

                    <li class="dropdown" style="width:15%;">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Utilities</a>

                    </li>
                </ul>
                <p class="nav navbar-text" style="font-size:20px">Hello, @User.Identity.Name!</p>
            </div>
        </div>
    </nav>
    <div class="container-fluid body-content" style="background-color:ghostwhite;">
        <main role="main" class="pb-3" style="margin-left:100px">
            @RenderBody()
        </main>
    </div>

    <div style="background-color:white">
        <footer style="margin:100px 0 0 25px">
            <p>
                Version: @ViewContext.Controller.GetType().Assembly.GetName().Version
                &nbsp;&nbsp;&nbsp; &copy; @DateTime.Now.Year - Howmet
            </p>
        </footer>
    </div>

    <script crossorigin="anonymous" src="https://unpkg.com/react@17/umd/react.development.js"></script>
    <script crossorigin="anonymous" src="https://unpkg.com/react-dom@17/umd/react-dom.development.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.26.1/axios.js"
            integrity="sha512-MNW6IbpNuZZ2VH9ngFhzh6cUt8L/0rSVa60F8L22K1H72ro4Ki3M/816eSDLnhICu7vwH/+/yb8oB3BtBLhMsA=="
            crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <!--  Share Components -->
    <script src="@Url.Content("~/Content/ReactJS/Common/SearchForm.jsx")"></script>
    <script src="@Url.Content("~/Content/ReactJS/Common/SharedModal.jsx")"></script>
    <script src="@Url.Content("~/Content/ReactJS/Common/ModalFooter.jsx")"></script>
    <script src="@Url.Content("~/Content/ReactJS/Common/SharedForm.jsx")"></script>
    <script src="@Url.Content("~/Content/ReactJS/Common/SharedTable.jsx")"></script>

    @RenderSection("ReactScripts", false)



</body>
</html>
